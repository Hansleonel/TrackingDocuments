<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.codehans.trackingdocuments.MapsDetalleActivity"
    tools:showIn="@layout/activity_maps_detalle">

    <fragment
        android:id="@+id/map_predio_detalle"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtV_Ddeta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:text="Detalles del predio"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtV_tipo_predio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_home_black_24dp"
                android:drawableStart="@drawable/ic_home_black_24dp"
                android:text="  Tipo de Predio:"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtV_contacto_predio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_contact_phone_black_24dp"
                android:drawableStart="@drawable/ic_contact_phone_black_24dp"
                android:text="  Contacto: Secretaria"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtV_telefono_predio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:text="  Telefono: 986453678"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtV_direccion_predio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_directions_black_24dp"
                android:drawableStart="@drawable/ic_directions_black_24dp"
                android:text="  Direccion:"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/txtV_entidad_predio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/ic_business_black_24dp"
                android:drawableStart="@drawable/ic_business_black_24dp"
                android:text="  Entidad:"
                android:textColor="@android:color/black" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
